<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.login.PasswordHelpActivity"
    android:background="@drawable/and_intro1">

    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#b2000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/help_exit"
        android:src="@drawable/close"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">


        <EditText

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/help_email"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="  이메일주소"
            android:singleLine="true"
            android:textSize="14sp"
            android:background="#1affffff"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="20dp"/>


        <Button
            android:id="@+id/help_ok"
            android:layout_marginTop="30dp"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/radius_login"
            android:layout_gravity="center"
            android:text="비밀번호 재설정 메일 보내기"/>

        <TextView

            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"

            android:textSize="12sp"
            android:text="· 가입시 작성한 메일주소로 작성해 주세요"/>
        <TextView

            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="5dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="· 메일주소가 기억나지 않을 경우 아래의 메일로 문의 주세요\n  family@edninnovation.net"/>

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
