<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_middle_mission"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/basic_mission"
    android:layout_height="220dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView23"
            android:src="@drawable/ic_training"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40분 홈 트레이닝 운동"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/imageView23"
            android:layout_toEndOf="@+id/imageView23"
            android:layout_marginStart="5dp"
            android:id="@+id/user_mission_title"/>

        <TextView
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/user_mission_now_position"
            android:layout_marginEnd="41dp"
            android:layout_alignTop="@+id/imageView23"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/textView44"
            android:layout_alignTop="@+id/user_mission_now_position"
            android:layout_alignStart="@+id/user_mission_now_position" />

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/user_mission_today_count"
            android:layout_alignTop="@+id/textView44"
            android:layout_toEndOf="@+id/textView44" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e3e3e3"
            android:layout_marginTop="9dp"
            android:id="@+id/view4"
            android:layout_below="@+id/user_mission_title"
            android:layout_alignStart="@+id/imageView23"
            android:layout_alignEnd="@+id/user_mission_today_count" />

        <TextView
            android:textColor="@android:color/white"

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40분"
            android:textSize="14sp"
            android:id="@+id/user_mission_time"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/user_mission_now_position" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView24"
            android:src="@drawable/time"
            android:layout_alignBottom="@+id/user_mission_time"
            android:layout_alignEnd="@+id/view4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView224"
            android:src="@drawable/tool_1"
            android:layout_alignTop="@+id/user_mission_time2"
            android:layout_alignStart="@+id/imageView24" />

        <TextView
            android:textColor="@android:color/white"

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40분"
            android:textSize="14sp"
            android:id="@+id/user_mission_time2"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/user_mission_time"
            android:layout_alignStart="@+id/user_mission_time" />

        <ImageView
            android:background="#000000"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_mission_taget"
            android:src="@drawable/m_bd_all"
            android:layout_below="@+id/view4"
            android:layout_alignStart="@+id/user_mission_title"
            android:layout_marginTop="9dp" />

        <ImageView

            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_mission_taget2"
            android:src="@drawable/m_bd_all"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@+id/user_mission_taget"
            android:layout_toEndOf="@+id/user_mission_taget" />


        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="36dp"
            android:background="@drawable/barder2"
            android:layout_alignBottom="@+id/user_mission_taget2"
            android:layout_alignEnd="@+id/imageView224"
            android:gravity="center"
            android:id="@+id/user_mission_start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#cde860"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="운동시작"/>


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/user_mission_completes"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_beenhere_copy"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        
        <LinearLayout
            android:id="@+id/main_middle_mission_replay"
            android:background="@drawable/barder2"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:textStyle="bold"
                android:textColor="#cde860"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 운동 완료 (다시하기)"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>