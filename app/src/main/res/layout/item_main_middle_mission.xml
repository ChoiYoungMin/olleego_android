<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_middle_mission"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/basic_mission"
    android:layout_height="220dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView23"
            android:src="@drawable/icon_24_px"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40분 홈 트레이닝 운동"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/imageView23"
            android:layout_toEndOf="@+id/imageView23"
            android:layout_marginStart="5dp"
            android:id="@+id/textView43"/>

        <TextView
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/textView42"
            android:layout_marginEnd="41dp"
            android:layout_alignTop="@+id/imageView23"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/textView44"
            android:layout_alignTop="@+id/textView42"
            android:layout_alignStart="@+id/textView42" />

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/textView45"
            android:layout_alignTop="@+id/textView44"
            android:layout_toEndOf="@+id/textView44" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e3e3e3"
            android:layout_marginTop="9dp"
            android:id="@+id/view4"
            android:layout_below="@+id/textView43"
            android:layout_alignStart="@+id/imageView23"
            android:layout_alignEnd="@+id/textView45" />

        <TextView
            android:textColor="@android:color/white"

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40분"
            android:textSize="14sp"
            android:id="@+id/textView46"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/textView42" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView24"
            android:src="@drawable/time"
            android:layout_alignBottom="@+id/textView46"
            android:layout_alignEnd="@+id/view4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView224"
            android:src="@drawable/tool_1"
            android:layout_alignTop="@+id/textView47"
            android:layout_marginTop="3dp"
            android:layout_alignStart="@+id/imageView24" />

        <TextView
            android:textColor="@android:color/white"

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40분"
            android:textSize="14sp"
            android:id="@+id/textView47"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView46"
            android:layout_alignStart="@+id/textView46" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView25"
            android:src="@drawable/person"
            android:layout_below="@+id/view4"
            android:layout_alignStart="@+id/textView43"
            android:layout_marginTop="9dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView26"
            android:src="@drawable/person"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@+id/imageView25"
            android:layout_toEndOf="@+id/imageView25" />


        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="36dp"
            android:background="@drawable/barder2"
            android:layout_alignBottom="@+id/imageView26"
            android:layout_alignEnd="@+id/imageView224"
            android:gravity="center"
            android:id="@+id/linearLayout9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#cde860"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="운동시작"/>


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_beenhere_copy"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="오늘 운동 완료 (다시하기)"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>