

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.edn.olleego.activity.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_login_no"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#f2f2f2"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="     로그인 하시면 내 몸의 변화를 가져다줄\n운동방법과 다이어트 가이드를 받을수 있습니다."
                   android:id="@+id/textView18"
                   android:layout_above="@+id/button2"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="18dp" />

                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(아이콘) 로그인"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/button2" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:id="@+id/button22"
                    android:layout_alignTop="@+id/button2"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_login_ok_type1"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:background="#f2f2f2"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키, 체중 등 건강정보를 입력 하고\n건강리포트를 받아보세요!"
                    android:id="@+id/textView22"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/button3"
                    android:layout_marginEnd="22dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 건강정보"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/button3"
                    android:layout_alignTop="@+id/textView22"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/yy2"
                    android:id="@+id/imageView19"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/imageView19"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/main_custom_mission"
                        android:background="@drawable/bbb"
                        android:layout_below="@+id/imageView19"
                        android:layout_alignStart="@+id/imageView19" />

                    <ImageView

                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/home_mission_choise"
                        android:background="@drawable/bbb2"
                        android:layout_alignTop="@+id/imageView18"
                        android:layout_toEndOf="@+id/imageView18" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="건강일기"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/common_ic_googleplayservices"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">

                </ImageView>
            </RelativeLayout>

            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/bc"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"/>
                <ImageView

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/test"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/test1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
                <ImageView

                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/test2"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/banner01"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>





</ScrollView>
