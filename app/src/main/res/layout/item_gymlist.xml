<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

     android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/gym_img"
        android:src="@drawable/kakao_default_profile_image"
        android:layout_alignTop="@+id/gym_type"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        />

    <TextView
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="피트니스"
        android:id="@+id/gym_type"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/gym_name"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="대방동 피트니스"
        android:id="@+id/gym_name"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/gym_type"
        android:layout_toEndOf="@+id/gym_img" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="월정액"
        android:id="@+id/gym_pay"
        android:textSize="15sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/gym_name"
        android:layout_alignEnd="@+id/gym_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100,000 원"
        android:id="@+id/gym_pay2"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/gym_pay"
        android:layout_alignEnd="@+id/gym_name" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PT권"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:id="@+id/gym_pt"
        android:textSize="15sp"
        android:layout_below="@+id/gym_img"
        android:layout_alignEnd="@+id/gym_pay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100,000 원"
        android:id="@+id/gym_pt2"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/gym_pt"
        android:layout_alignEnd="@+id/gym_pay2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/gym_pt12"
        android:text=" "
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/gym_pt2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>