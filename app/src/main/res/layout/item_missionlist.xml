<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@drawable/card_background">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:id="@+id/mission_img"
        android:layout_alignParentStart="true"
        />


    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="쉽게 따라하는 초보용 미션 프로그램sssssssssssssssds"
        android:id="@+id/mission_title"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/mission_img"
        android:layout_toEndOf="@+id/mission_img"
        android:layout_marginBottom="55dp" />


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignTop="@+id/mission_title"
    android:layout_alignStart="@+id/mission_title"
    android:layout_marginTop="18dp"
        android:id="@+id/linearLayout8">
+
    <RatingBar
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mission_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:rating="3"/>

    <TextView
        android:id="@+id/rating_peple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="(00)"
        android:layout_marginLeft="5dp"/>
</LinearLayout>


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignTop="@+id/mission_title"
    android:layout_alignStart="@+id/mission_title"
    android:layout_marginTop="40dp"
        android:id="@+id/linearLayout17">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:background="#98e56a"
            android:gravity="center">

            <TextView
                android:id="@+id/mission_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="초급"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:background="#98e56a"
            android:gravity="center">

            <TextView
                android:id="@+id/mission_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="2주"/>
        </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignTop="@+id/mission_img"
        android:layout_alignStart="@+id/mission_title">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/mission_type_img"/>
        
        <TextView
            android:id="@+id/mission_type"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#a6c52a"
            android:textStyle="bold"
            android:text="필라테스"/>

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="#a6c52a"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#a6c52a"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:text="지난번 완료 프로그램"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="20dp"
        android:background="@drawable/mission_radius"
        android:gravity="center"
        android:layout_marginStart="6dp"
        android:layout_alignTop="@+id/linearLayout17"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_people_12"/>

        <TextView
            android:id="@+id/mission_all_user"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="120"/>

    </LinearLayout>

</RelativeLayout>