<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@drawable/and_intro1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:id="@+id/comeon"
    tools:context="com.edn.olleego.activity.login.EmailActivity">

    <LinearLayout
        android:background="#b2000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="700dp">

    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:id="@+id/join_exit"
        android:src="@drawable/close"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"

        android:focusable="true"
        android:focusableInTouchMode="true">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_hint"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1affffff"
            android:textColorHint="@android:color/white"
            android:theme="@style/Theme.AppCompat">
            <EditText
                android:id="@+id/email_"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:inputType="textEmailAddress"
                android:hint="메일주소"
                android:textSize="14sp"
                android:background="@null"
                android:layout_marginLeft="20dp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="20dp"
            android:id="@+id/name_hint"
            android:layout_width="match_parent"
            android:textColorHint="@android:color/white"
            android:background="#1affffff"
            android:layout_height="40dp"
            android:theme="@style/Theme.AppCompat">
            <EditText
                android:id="@+id/name_"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:hint="이름"
                android:background="@null"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_hint"
            android:layout_width="match_parent"
            android:textColorHint="@android:color/white"
            android:layout_marginTop="20dp"
            android:background="#1affffff"
            android:layout_height="40dp"
            android:theme="@style/Theme.AppCompat">
            <EditText
                android:id="@+id/password_"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"

                android:singleLine="true"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:hint="비밀번호 (영문과 숫자를 혼합하여 8자이상)"
                android:background="@null"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/password2_hint"
            android:layout_width="match_parent"
            android:textColorHint="@android:color/white"
            android:layout_marginTop="20dp"
            android:background="#1affffff"
            android:layout_height="40dp"
            android:theme="@style/Theme.AppCompat">
            <EditText
                android:id="@+id/password_chk"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:hint="비밀번호 확인"
                android:background="@null"/>
        </android.support.design.widget.TextInputLayout>


        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="#1affffff"
            android:layout_height="40dp"
            android:layout_width="match_parent">

            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:hint="성별"
                android:background="@null"/>

            <ImageView

                android:id="@+id/sex_w"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="여자"
                android:src="@drawable/f_btn_default"
                android:layout_toStartOf="@+id/sex_m" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="남자"
                android:src="@drawable/m_btn_default"
                android:id="@+id/sex_m"
                android:layout_alignTop="@+id/sex_w"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>



        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="#1affffff"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="14sp"
                android:hint="생년월일"
                android:background="@null"/>

            <TextView
                android:layout_marginLeft="110dp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:inputType="date"
                android:text="1999-01-05"
                android:ems="10"
                android:id="@+id/birtday_"/>

            <ImageView
                android:id="@+id/birtday_btn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/birth_btn"/>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idid">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/policy"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark"
                android:text="이용약관 확인"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/policy2"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark"
                android:text="개인정보취급방침 확인"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:lineSpacingExtra="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cde860"
            android:text="이용약관 및 개인정보취급방침 내용을 확인하였으며,\n                       이 내용에 동의합니다."/>
        <Button
            android:id="@+id/join_ok"
            android:layout_marginTop="20dp"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/radius_login"
            android:layout_gravity="center"
            android:text="동의하고 회원가입"/>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
</ScrollView>