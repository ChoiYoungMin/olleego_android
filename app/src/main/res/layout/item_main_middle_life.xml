<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_middle_life"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/basic_training_3"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:background="#70000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView23"
                android:src="@drawable/ic_directions_walk"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="21dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생활습관"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/imageView23"
                android:layout_toEndOf="@+id/imageView23"
                android:layout_marginStart="5dp"
                android:id="@+id/user_life_title"/>

            <TextView
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/user_life_now_position"
                android:layout_marginEnd="55dp"
                android:layout_alignTop="@+id/imageView23"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/textView44"
                android:layout_alignTop="@+id/user_life_now_position"
                android:layout_alignStart="@+id/user_life_now_position" />

            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/user_life_today_count"
                android:layout_alignTop="@+id/textView44"
                android:layout_toEndOf="@+id/textView44" />
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e3e3e3"
            android:layout_marginTop="9dp"
            android:id="@+id/view4"
            android:layout_below="@+id/user_life_title"
            android:layout_alignStart="@+id/imageView23" />

        <TextView
            android:textColor="@android:color/white"

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="생활습관 설명 영역"
            android:id="@+id/user_life_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp" />


    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/user_life_completes"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_beenhere_copy"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>
</RelativeLayout>