<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.edn.olleego.fragment.report.ReportFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:background="#30312f">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:textColor="#e5e5e2"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="당신의 BMI"/>

                <TextView
                    android:id="@+id/report_bmi"
                    android:textStyle="bold"
                    android:textColor="#cde860"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:text="27.2 [정상]"/>

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="44dp"
                android:background="#454544"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#e5e5e2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="건강온도"/>

                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_help"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/report_health_temp"

                        android:layout_marginTop="15dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#cde860"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70˚ [건강양호]"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center|fill"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/relativeLayout5">

                    <com.edn.olleego.common.VerticalProgressBar
                        android:layout_width="4dp"
                        android:layout_height="45dp"
                        android:id="@+id/report_health_bar"
                        style="@style/vertical_progress_bar"
                        android:background="#606060"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="51dp"/>

                    <LinearLayout
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/raduis_dhs"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="4dp">

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <android.support.design.widget.TabLayout
                android:background="#30312f"
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/MyCustomTabLayout"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1150dp">
            <android.support.v4.view.ViewPager

                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>





    </LinearLayout>


</ScrollView>
