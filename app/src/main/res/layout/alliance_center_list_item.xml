<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        style="@style/CardViewStyle.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="122dp"
                    android:layout_height="122dp" />

                <ImageView
                    android:id="@+id/discount"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/discount"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/layout"
                android:layout_toRightOf="@+id/layout"
                android:maxLines="1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/layout"
                android:layout_toRightOf="@+id/layout"
                android:maxLines="1"
                android:textColor="#606060"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/star"
                style="@style/RatingBar_Center_List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/layout"
                android:layout_toRightOf="@+id/layout"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/star"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@+id/star"
                android:layout_toRightOf="@+id/star"
                android:textColor="#878885"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/star"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/layout"
                android:layout_toRightOf="@+id/layout"
                android:textColor="#606060"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pt"
                android:layout_below="@+id/star"
                android:layout_marginLeft="6dp"
                android:layout_toEndOf="@+id/pt"
                android:layout_toRightOf="@+id/pt"
                android:textColor="@color/fitness_blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sale_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/money"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/money"
                android:layout_toRightOf="@+id/money"
                android:textColor="#cbcbc9"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxEms="12"
                android:maxLines="1"
                android:textColor="#878885"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/location"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/location"
                android:layout_toStartOf="@+id/location"
                android:src="@drawable/ic_pin_drop" />

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/name"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/name"
                android:layout_toRightOf="@+id/name"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#606060"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>