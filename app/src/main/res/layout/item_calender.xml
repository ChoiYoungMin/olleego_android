<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/calender_layout"
    android:gravity="center">




    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/calender_walking"/>
    <ImageView

        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/calender_walking"
        android:layout_toEndOf="@+id/calender_walking"
        android:id="@+id/calender_water" />
    <ImageView
        android:id="@+id/calender_sleep"

        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@+id/calender_walking"
        android:layout_toStartOf="@+id/calender_water" />

    <ImageView

        android:id="@+id/calender_food"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@+id/calender_water"
        android:layout_alignStart="@+id/calender_water" />


    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">


        <TextView
            android:gravity="center"

            android:id="@+id/tv_item_gridview"

            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="d"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

</RelativeLayout>