<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edn.olleego.activity.mission.MissionCustomized1Activity"
    android:background="#f2f2f2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/banner01"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="회원님의 신체 정보를 입력해주세요"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="키(신장)*"
            android:id="@+id/textView23" />

        <RelativeLayout
            android:layout_marginLeft="101dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray">


            <EditText

                android:singleLine="true"
                android:background="@android:color/darker_gray"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/textView24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:paddingLeft="5dp"
                android:id="@+id/textView24" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="체중*" />

        <RelativeLayout
            android:layout_marginLeft="101dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray">


            <EditText
                android:singleLine="true"
                android:background="@android:color/darker_gray"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/textView25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:id="@+id/textView25" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="허리둘레*" />

        <RelativeLayout
            android:layout_marginLeft="101dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@android:color/darker_gray">


            <EditText
                android:singleLine="true"
                android:background="@android:color/darker_gray"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/textView255"
                android:id="@+id/editText" />

            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:textColor="@android:color/black"
                android:layout_marginEnd="14dp"
                android:id="@+id/textView255"
                android:layout_alignBaseline="@+id/editText"
                android:layout_alignBottom="@+id/editText"
                android:layout_alignParentEnd="true" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/editText"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:checked="true"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="줄자(cm)"
                    android:id="@+id/radioButton" />
                <RadioButton
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="바지사이즈(inch)"
                    android:id="@+id/radioButton2" />
            </RadioGroup>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:text="엉덩이둘레*" />

        <RelativeLayout
            android:layout_marginLeft="101dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/relativeLayout2">


            <EditText
                android:singleLine="true"
                android:background="@android:color/darker_gray"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/textView251" />

            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:id="@+id/textView251" />
        </RelativeLayout>


        <TextView
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(*)는 필수 입력사항입니다."
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="건강정보를 저장하고 다음 질문으로"
            android:layout_above="@+id/button4"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음질문으로"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button4" />
    </RelativeLayout>


</LinearLayout>
