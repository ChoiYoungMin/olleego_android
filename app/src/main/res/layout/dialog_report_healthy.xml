<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_report_dis"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:gravity="center|top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건강온도"/>

            <TextView
                android:lineSpacingExtra="7dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건강온도는 BMI, 복부비만율, 혈압, 혈당을 기준으로 건강\n상태를 나타내는 올리고만의 건강 지수입니다.\n0도 건강상태가 나쁨을 나타내며,\n100도가 건강상태가 좋은 것을 나타냅니다."/>


            <LinearLayout
                android:layout_marginTop="50dp"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/report_healthy_1"
                    android:gravity="center"
                    android:layout_width="61dp"
                    android:layout_height="20dp">
                    <TextView
                        android:textStyle="normal"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위험"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"

                    android:layout_marginLeft="2dp"
                    android:background="#ff8681"
                    android:gravity="center"
                    android:layout_width="61dp"
                    android:layout_height="20dp">
                    <TextView
                        android:textStyle="normal"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주의"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:background="#ffa9a5"
                    android:gravity="center"
                    android:layout_width="61dp"
                    android:layout_height="20dp">
                    <TextView
                        android:textStyle="normal"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관심"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:background="#cde860"
                    android:gravity="center"
                    android:layout_width="61dp"
                    android:layout_height="20dp">
                    <TextView
                        android:textStyle="normal"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="양호"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/report_healthy_2"
                    android:gravity="center"
                    android:layout_width="61dp"
                    android:layout_height="20dp">
                    <TextView
                        android:textStyle="normal"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="좋음"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <LinearLayout
                    android:gravity="end"
                    android:layout_weight="0.65"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textColor="#cbcbc9"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20도"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="0.65"
                    android:gravity="end"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textColor="#cbcbc9"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40도"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="0.65"

                    android:gravity="end"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textColor="#cbcbc9"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60도"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.65"

                    android:gravity="end"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textColor="#cbcbc9"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80도"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.7"

                    android:gravity="center"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textColor="#cbcbc9"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>
