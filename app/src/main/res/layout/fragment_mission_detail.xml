<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edn.olleego.activity.mission.MissionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/htjpg"
        android:id="@+id/imageView10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="쉽게 따라하는 초보용 미션 프로그램"
        android:id="@+id/textView7"
        android:layout_below="@+id/imageView10"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="57dp"
        android:background="@android:color/white"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/ratingBar3"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="난이도"
            android:textColor="@android:color/black"
            android:id="@+id/textView8"
            android:layout_marginStart="39dp"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미션 기간"
            android:textColor="@android:color/black"
            android:id="@+id/textView9"
            android:layout_alignTop="@+id/textView8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 빈도"
            android:textColor="@android:color/black"
            android:id="@+id/textView10"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="33dp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back_image"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView8"
            android:layout_marginStart="35dp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back_image"
            android:id="@+id/imageView11"
            android:layout_marginEnd="27dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 초급"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4주"
            android:textColor="@android:color/black"
            android:id="@+id/textView12"
            android:textStyle="bold"
            android:layout_alignTop="@+id/textView13"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 주 3회"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/textView13"
            android:layout_alignTop="@+id/textView11"
            android:layout_toEndOf="@+id/imageView11" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_signin"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar3"
        style="?android:attr/ratingBarStyleSmall"
        android:progressTint="@android:color/black"
        android:progressBackgroundTint="@android:color/white"
        android:secondaryProgressTint="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="( 30 )"
        android:layout_marginLeft="5dp"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/ratingBar3"
        android:layout_toEndOf="@+id/ratingBar3" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/imageView12"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/ratingBar3"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150 명"
        android:layout_marginLeft="5dp"
        android:id="@+id/textView16"
        android:layout_alignBottom="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미션 받기"
        android:id="@+id/button"
        android:layout_below="@+id/textView15"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="210dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주요 운동"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/textView14"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

       <ImageView
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:id="@+id/imageView13"
           android:layout_below="@+id/textView14"
           android:layout_alignStart="@+id/textView14"
           android:background="@drawable/sample_id_btn"
           android:layout_marginTop="25dp" />

       <ImageView
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:id="@+id/imageView14"
           android:background="@drawable/sample_id_btn"
           android:layout_alignTop="@+id/imageView13"
           android:layout_centerHorizontal="true" />

       <ImageView
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:id="@+id/imageView15"
           android:background="@drawable/sample_id_btn"
           android:layout_alignTop="@+id/imageView14"
           android:layout_toEndOf="@+id/imageView14"
           android:layout_marginLeft="30dp"/>

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="10분"
           android:id="@+id/checkBox"
           android:layout_below="@+id/imageView13"
           android:layout_alignStart="@+id/imageView13"
           android:layout_marginTop="27dp" />

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="20분"
           android:id="@+id/checkBox2"
           android:layout_alignTop="@+id/checkBox"
           android:layout_toEndOf="@+id/checkBox" />

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="30분"
           android:id="@+id/checkBox3"
           android:layout_alignTop="@+id/checkBox2"
           android:layout_toEndOf="@+id/checkBox2" />

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="40분"
           android:id="@+id/checkBox4"
           android:layout_alignTop="@+id/checkBox3"
           android:layout_toEndOf="@+id/checkBox3" />


   </RelativeLayout>
    </LinearLayout>

</ScrollView>