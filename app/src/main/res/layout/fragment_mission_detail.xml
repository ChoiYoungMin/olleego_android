<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="#f5f6f3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/htjpg"
            android:id="@+id/imageView10" />

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edn.olleego.activity.mission.MissionActivity"
    android:background="@drawable/card_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout9">


        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/imageView27"
            android:background="@drawable/pilates"/>

        <TextView
            android:id="@+id/ㅁㄹㄴㄻㄴ"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#a6c52a"
            android:textStyle="bold"
            android:text="다이어트"/>

        <TextView
            android:gravity="right"
            android:layout_weight="1"
            android:id="@+id/mission_type"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#a6c52a"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="지난번 완료 프로그램"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="쉽게 따라하는 초보용 미션 프로그램"
            android:id="@+id/textView7"
            android:textSize="20sp"
            android:layout_below="@+id/linearLayout9"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center|start"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar2"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="3"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(00)"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|start"

            android:layout_marginTop="5dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_people_12"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="#878885"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 명이 이 미션을 수행하였습니다."/>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/white"
        android:id="@+id/relativeLayout">


        <LinearLayout
            android:layout_weight="1"
        android:background="#fafcf3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_turned_in_not"/>

            <TextView

                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="난이도"
                android:textSize="10sp"
                android:textColor="#878885"
                android:id="@+id/textView8"/>
        </LinearLayout>


        <TextView

            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초급"
            android:textSize="14sp"
            android:textColor="#606060"
            android:textStyle="bold"
            android:id="@+id/textView11"/>
    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="#fafcf3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_turned_in_not"/>

                <TextView

                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미션기간"
                    android:textSize="10sp"
                    android:textColor="#878885"
                    android:id="@+id/textView8w"/>
            </LinearLayout>


            <TextView

                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4주"
                android:textSize="14sp"
                android:textColor="#606060"
                android:textStyle="bold"
                android:id="@+id/textView111"/>
        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="#fafcf3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_turned_in_not"/>

                <TextView

                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동빈도"
                    android:textSize="10sp"
                    android:textColor="#878885"
                    android:id="@+id/textView8w2"/>
            </LinearLayout>


            <TextView

                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주 3회"
                android:textSize="14sp"
                android:textColor="#606060"
                android:textStyle="bold"
                android:id="@+id/textView1111"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
   <RelativeLayout
       android:background="@drawable/card_background"
       android:layout_marginTop="5dp"
       android:layout_width="match_parent"
       android:layout_height="210dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주요 운동"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/textView14"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

       <ImageView
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:id="@+id/imageView13"
           android:layout_below="@+id/textView14"
           android:layout_alignStart="@+id/textView14"
           android:background="@drawable/sample_id_btn"
           android:layout_marginTop="25dp" />

       <ImageView
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:id="@+id/imageView14"
           android:background="@drawable/sample_id_btn"
           android:layout_alignTop="@+id/imageView13"
           android:layout_centerHorizontal="true" />

       <ImageView
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:id="@+id/imageView15"
           android:background="@drawable/sample_id_btn"
           android:layout_alignTop="@+id/imageView14"
           android:layout_toEndOf="@+id/imageView14"
           android:layout_marginLeft="30dp"/>

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="10분"
           android:id="@+id/checkBox"
           android:layout_below="@+id/imageView13"
           android:layout_alignStart="@+id/imageView13"
           android:layout_marginTop="27dp" />

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="20분"
           android:id="@+id/checkBox2"
           android:layout_alignTop="@+id/checkBox"
           android:layout_toEndOf="@+id/checkBox" />

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="30분"
           android:id="@+id/checkBox3"
           android:layout_alignTop="@+id/checkBox2"
           android:layout_toEndOf="@+id/checkBox2" />

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="40분"
           android:id="@+id/checkBox4"
           android:layout_alignTop="@+id/checkBox3"
           android:layout_toEndOf="@+id/checkBox3" />


   </RelativeLayout>
    </LinearLayout>

</ScrollView>