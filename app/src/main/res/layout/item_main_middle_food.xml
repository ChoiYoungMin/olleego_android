<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_middle_life"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/basic_food_1"
    android:layout_height="220dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView23"
            android:src="@drawable/ic_directions_walk"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식습관"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/imageView23"
            android:layout_toEndOf="@+id/imageView23"
            android:layout_marginStart="5dp"
            android:id="@+id/user_food_title"/>

        <TextView
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/user_food_now_position"
            android:layout_marginEnd="41dp"
            android:layout_alignTop="@+id/imageView23"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/textView44"
            android:layout_alignTop="@+id/user_food_now_position"
            android:layout_alignStart="@+id/user_food_now_position" />

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/user_food_today_count"
            android:layout_alignTop="@+id/textView44"
            android:layout_toEndOf="@+id/textView44" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e3e3e3"
            android:layout_marginTop="9dp"
            android:id="@+id/view4"
            android:layout_below="@+id/user_food_title"
            android:layout_alignStart="@+id/imageView23"
            android:layout_alignEnd="@+id/user_food_today_count" />

        <TextView
            android:textColor="@android:color/white"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="식습관 설명 영역"
            android:id="@+id/user_food_context"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>