<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#30312f"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:id="@+id/login_no_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView16"
            android:src="@drawable/full_coach"/>

        <LinearLayout
            android:background="@drawable/reduis_main_top"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_power_settings_new"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#c3e74e"
                android:text="로그인"/>

            </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:background="#30312f"
        android:layout_marginTop="15dp"
        android:id="@+id/login_ok_left"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView161"
            android:src="@drawable/full_coach"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="36dp"
            android:layout_alignBottom="@+id/imageView161"
            android:layout_toEndOf="@+id/imageView161">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textStyle="bold"
                android:id="@+id/textView117"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="com5090@naver.com"
                android:textStyle="bold"
                android:id="@+id/textView1172"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#cde860"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:id="@+id/linearLayout7">
            
            <ImageView
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:background="@drawable/sweat"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#454544"
                android:textStyle="bold"
                android:text="7500 땀"/>


       </LinearLayout>

    </RelativeLayout>
</LinearLayout>
