<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f3"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_left"
            android:id="@+id/prev"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_date" />
        <TextView
            android:layout_gravity="center"

            android:id="@+id/tv_date"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"


            android:gravity="center_vertical"

            android:paddingLeft="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@android:color/black"

            android:textSize="12sp"
            android:text="2016년 06월"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/next"
            android:layout_marginRight="15dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"

            android:layout_marginStart="11dp"
            android:layout_alignTop="@+id/prev"
            android:layout_toEndOf="@+id/tv_date" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridView
            android:scrollbars="none"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/gridview2"

            android:layout_height="30dp"
            android:columnWidth="10dp"
            android:layout_width="match_parent"
            android:numColumns="7"
            android:horizontalSpacing="5dp"
            android:background="#ffffff"
            android:verticalSpacing="-1dp"

            >

        </GridView>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/white">
        <GridView

            android:scrollbars="none"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="1dp"
            android:id="@+id/gridview"

            android:layout_height="310dp"
            android:columnWidth="10dp"
            android:layout_width="match_parent"
            android:numColumns="7"
            android:horizontalSpacing="5dp"
            android:listSelector="#f2f2f2"
            android:background="@android:color/white"
            android:verticalSpacing="8dp"
            >

        </GridView>
    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:background="#f5f6f3"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|start">

            <TextView
                android:id="@+id/diary_day"
                android:textColor="#606060"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6월 26일, 수요일"/>

            <TextView

                android:id="@+id/diary_today"
                android:textSize="12sp"
                android:textColor="#a6c52a"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="TODAY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:background="#ffffff"
                android:elevation="2dp"
                android:outlineProvider="bounds"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="55dp"
                android:layout_height="90dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/diary_walking_icon"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/diary_step_1_unchecked"/>

                <TextView
                    android:id="@+id/diary_walking_text"

                    android:textColor="#cbcbc9"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>



            </LinearLayout>
            <LinearLayout

                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="#ffffff"
                android:elevation="2dp"
                android:outlineProvider="bounds"

                android:layout_weight="1"
                android:layout_width="55dp"
                android:layout_height="90dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/diary_sleep_icon"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/diary_sleep_2_unchecked"/>

                <TextView
                    android:id="@+id/diary_sleep_text"

                    android:textColor="#cbcbc9"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00시간 00분"/>

            </LinearLayout>
            <LinearLayout

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="#ffffff"
                android:elevation="2dp"
                android:outlineProvider="bounds"

                android:layout_weight="1"
                android:layout_width="55dp"
                android:layout_height="90dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/diary_water_icon"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/diary_water_3_unchecked"/>

                <TextView
                    android:id="@+id/diary_water_text"

                    android:textColor="#cbcbc9"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 잔"/>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout

            android:gravity="center_horizontal"
            android:background="#ffffff"
            android:elevation="2dp"
            android:outlineProvider="bounds"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/diary_food_icon"

                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/diary_meal_4_unchecked"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:gravity="center">


                <TextView
                    android:visibility="gone"
                    android:id="@+id/diary_food_text"
                    android:textSize="14sp"
                    android:textColor="#cbcbc9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식사정보를 입력해주세요."/>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/raduis3"
                    android:id="@+id/main_diary_morning">

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="아침"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/raduis3"
                    android:id="@+id/main_diary_lunch">

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="점심" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/raduis3"
                    android:id="@+id/main_diary_dinner">

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="저녁" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/raduis3">

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="간식" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/raduis3">

                    <TextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="모임" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:background="#ffffff"
            android:elevation="2dp"
            android:outlineProvider="bounds"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/listv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


</ScrollView>